@model TRS.Models.ViewModels.DailyReportModel

@{
    ViewData["Title"] = "Strona główna";
    var date = Model.Date.ToString("yyyy-MM-dd");
}

<main class="bd-main order-1 gap-3">
    <div class="d-md-flex align-items-center justify-content-between">
        <h1 class="display-6">Podsumowanie czasu pracy w dniu @Html.DisplayFor(model => model.Date)</h1>
        <form asp-action="Index" method="GET">
            <span>Przejdź do: </span>
            <input asp-for="Date"/>
            <input type="submit" value="Wyślij"/>
        </form>
    </div>
    <div class="text-center">
        <table class="table">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Report.Entries[0].Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Report.Entries[0].Subcode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Report.Entries[0].Time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Report.Entries[0].Description)
                </th>
                <th>
                    Akcje
                </th>
            </tr>
            </thead>
            <tbody>
            @for (var i = 0; i < Model.Report.Entries.Count; i++)
            {
                if (Model.Report.Entries[i].Date.ToString("yyyy-MM-dd") != Model.Date.ToString("yyyy-MM-dd"))
                    continue;
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Report.Entries[i].Code)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Report.Entries[i].Subcode)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Report.Entries[i].Time)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Report.Entries[i].Description)
                    </td>
                    <td>
                        <a asp-controller="ReportEntry" asp-action="Index" asp-route-date="@date" asp-route-id="@i">Obejrzyj</a> |
                        <a asp-controller="ReportEntry" asp-action="Edit" asp-route-date="@date" asp-route-id="@i">Zmień</a> |
                        <a asp-controller="ReportEntry" asp-action="Delete" asp-route-date="@date" asp-route-id="@i">Skasuj</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <a asp-controller="ReportEntry" asp-action="Add" asp-route-date="@date">Dodaj</a>
</main>
