@model TRS.Models.ViewModels.ProjectWithUserSummaryModel
@{
    ViewData["Title"] = "Przegląd projektu";
}

<main class="bd-main order-1 gap-3">
    <h1 class="display-6">Przegląd projektu @Model.Project.Name</h1>
    <div class="text-center">
        <table class="table">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Project.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project.Budget)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project.BudgetLeft)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project.Subactivities)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project.Active)
                </th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Project.Code)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Project.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Project.Budget)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Project.BudgetLeft)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Project.Subactivities)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Project.Active)
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    @if (Model.UserSummaries.Length > 0)
    {
        <strong>Zestawienie czasu pracy dla pracowników:</strong>
        <table class="table">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserSummaries[0].Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserSummaries[0].Month)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserSummaries[0].DeclaredTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserSummaries[0].AcceptedTime)
                </th>
            </tr>
            </thead>
            <tbody>
            @for (var i = 0; i < Model.UserSummaries.Length; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.UserSummaries[i].Username)
                        <input id="Username-@i" form="form-@i" name="Username" type="hidden" asp-for="UserSummaries[i].Username"/>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.UserSummaries[i].Month)
                        <input id="Month-@i" form="form-@i" name="Month" type="hidden" asp-for="UserSummaries[i].Month"/>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.UserSummaries[i].DeclaredTime)
                    </td>
                    <td>
                        @if (Model.Project.Active)
                        {
                            <input id="AcceptedTime-@i" form="form-@i" name="AcceptedTime" asp-for="UserSummaries[i].AcceptedTime"/>
                            <button type="submit" form="form-@i">Zatwierdź</button>
                        }
                        else
                        {
                            @Html.DisplayFor(model => model.UserSummaries[i].AcceptedTime)
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <p>
            <strong>Zaakceptowany czas razem:</strong>
            @Model.UserSummaries.Sum(x => x.AcceptedTime ?? 0)
        </p>
        @for (var i = 0; i < Model.UserSummaries.Length; i++)
        {
            <form id="form-@i" asp-action="UpdateAcceptedTime" asp-route-id="@Model.Project.Code">
            </form>
        }
    }
</main>
